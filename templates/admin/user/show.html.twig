{% extends 'admin.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<!-- Recent Sales Start -->
	<div class="container-fluid pt-4 px-4">
		<div class="bg-secondary text-center rounded p-4">
			<div class="d-flex align-items-center justify-content-between mb-4">
				<h6 class="mb-0">User Profile</h6>
				<a href="{{ path('app_admin_user_index') }}">Back to List</a>
			</div>
			<div class="table-responsive">
				<table class="table text-start align-middle table-bordered table-hover mb-0">
					<tbody>
						<tr>
							<th>Email</th>
							<td>{{user.email}}</td>
						</tr>
						<tr>
							<th>Is Verified</th>
							<td>{{user.isVerified ? 'Yes' : 'No' }}</td>
						</tr>
						<tr>
							<th>FirstName</th>
							<td>{{user.FirstName}}</td>
						</tr>
						<tr>
							<th>LastName</th>
							<td>{{user.LastName}}</td>
						</tr>
                        <tr>
							<th>Company Name</th>
							<td>{{user.MiddleName}}</td>
						</tr>
						<tr>
							<th>Mobile</th>
							<td>{{user.Mobile}}</td>
						</tr>
						<tr>
							<th>LastLogin</th>
							<td>{{user.LastLogin ? user.LastLogin|date('Y-m-d H:i:s')}}</td>
						</tr>
						<tr>
							<th>RegisteredAt</th>
							<td>{{user.RegisteredAt ? user.RegisteredAt|date('Y-m-d H:i:s')}}</td>
						</tr>
						<table>
							<tbody>
								<tr>
									<th>
										<a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">Edit</th>
									</th>
									<td>{{ include ('admin/user/_delete_form.html.twig') }}</td>
								</tr>
							</tbody>
						</table>

					</tbody>
				</table>
			</div>
		</div>
	</div>
	<!-- Recent Sales End -->
{% endblock %}
